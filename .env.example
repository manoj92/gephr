# Humanoid Training Platform Environment Configuration

# Application
NODE_ENV=development
API_V1_STR=/api/v1
PROJECT_NAME="Humanoid Training Platform"

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/humanoid_training

# Security
SECRET_KEY=your-secret-key-here-generate-a-strong-32-char-key
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=15

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=3

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:19006

# Redis (for session storage and rate limiting)
REDIS_URL=redis://localhost:6379

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/quicktime

# Robot Connection
ROBOT_COMMAND_TIMEOUT=30
MAX_ROBOT_CONNECTIONS=10

# Hand Tracking
HAND_TRACKING_FPS=30
MAX_GESTURE_DURATION=300

# Marketplace
MIN_SKILL_PRICE=0.01
MAX_SKILL_PRICE=1000.0
MARKETPLACE_FEE_PERCENTAGE=0.05

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=90

# SSL/TLS
REQUIRE_HTTPS=false  # Set to true in production
SSL_CERT_PATH=
SSL_KEY_PATH=

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_MESSAGE_SIZE=1048576  # 1MB
WS_CONNECTION_TIMEOUT=300

# Email (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@humanoidtraining.com

# Telemetry and Analytics
ENABLE_TELEMETRY=false
ANALYTICS_API_KEY=

# Development Settings
DEBUG=false
HOT_RELOAD=false
MOCK_EXTERNAL_SERVICES=true