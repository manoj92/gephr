# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/humanoid_training

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Redis
REDIS_URL=redis://localhost:6379

# CORS Origins (comma separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:19006

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Robot Connection Settings
ROBOT_COMMAND_TIMEOUT=30
MAX_ROBOT_CONNECTIONS=10

# Hand Tracking Settings
HAND_TRACKING_FPS=30
MAX_GESTURE_DURATION=300

# Marketplace Settings
MIN_SKILL_PRICE=0.01
MAX_SKILL_PRICE=1000.0
MARKETPLACE_FEE_PERCENTAGE=0.05

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Email (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@humanoidtraining.com

# Payment Processing (Optional)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=