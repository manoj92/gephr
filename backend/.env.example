# Environment Configuration
ENVIRONMENT=development

# Database (SQLite for development, PostgreSQL for production)
# Development (easier setup)
DATABASE_URL=sqlite+aiosqlite:///./humanoid_training.db
# Production
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/humanoid_training

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Redis
REDIS_URL=redis://localhost:6379

# NVIDIA GR00T Configuration
NGC_API_KEY=your-nvidia-ngc-api-key
NGC_ORG=nvidia
NGC_TEAM=no-team
GROOT_TRAINING_ENDPOINT=https://api.nvcf.nvidia.com/v1
GROOT_SIMULATION_ENDPOINT=https://omniverse-api.nvidia.com
USE_S3=false

# CORS Origins (JSON format)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:19006", "exp://192.168.1.100:19000"]

# AWS S3 (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Robot Connection Settings
ROBOT_COMMAND_TIMEOUT=30
MAX_ROBOT_CONNECTIONS=10

# Hand Tracking Settings
HAND_TRACKING_FPS=30
MAX_GESTURE_DURATION=300

# Marketplace Settings
MIN_SKILL_PRICE=0.01
MAX_SKILL_PRICE=1000.0
MARKETPLACE_FEE_PERCENTAGE=0.05

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Email (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@humanoidtraining.com

# Payment Processing (Optional)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=